<div class="grid" id="grid">

    <!-- Video of the Day -->

      <div class="grid-item videoContainer">

          <h1 id="homeH1">Video of the Day</h1>

          <div class="vidOfDay">

            <iframe src="https://www.youtube.com/embed/0M7ibPk37_U" frameborder="0" allowfullscreen>
            </iframe>

          </div>

        </div>

        <!--  Star Wars -->

          <div class="grid-item starWarsContainer">

                  <%= image_tag('star_wars1600.png', size: "90x90", class: "starWars") %>

                  <div class="starWarsContent">

                    <h2 id="hTest"></h2>

                    <div class="starScroll" id="content">
                    </div>

                    <div class="filmDiv">

                      <h3 id="sWarsFilms">Films</h3>

                      <div class="filmScroll" id="filmContent">

                      </div>

                    </div>

                  </div>

            </div>


    <!-- Confucius -->

      <div class="grid-item confContainer">

          <h1 id="confH1">

            <%= image_tag('confucius.png', size: "40x40", class: "confucius") %>

            <span class="confSpan">Confucius</span>

          </h1>


            <p class="confScroll">

              <%= @confact.content.html_safe %>

            </p>

        </div>


    <!-- Animal Facts -->

      <div class="grid-item animalContainer">

            <h1 class="animalH1">

            <%= image_tag('lion.png', size: "50x50", class: "animal") %>

            <span class="aniSpan">Animal Fact</span>

          </h1>

              <p class="animalScroll"><%= @anifact.content.html_safe %></p>

        </div>


    <!-- Pokemon -->
      <div class="grid-item pokeContainer">

              <%= image_tag('pokeball.png', size: "50x50", class: "pokeball") %>

              <div class="pokeContent">

                <h2 id="hPoke">Spirit Pokemon</h2>
                <p id="pokeContent">
                </p>
              </div>

            </div>


    <!-- ENGLISH PROVERBS -->

      <div class="grid-item provContainer">

            <h1 class="provH1">

            <%= image_tag('english.png', size: "40x40", class: "proverb") %>

            <span class="provSpan">Proverb</span></h1>


              <p class="provScroll"><%= @proverb.content.html_safe %></p>

        </div>


    <!-- Chuck Norris -->

      <div class="grid-item chuckContainer">

            <h1 class="chuckH1">
            <%= image_tag('laughing.png', size: "40x40", class: "chuck") %>

            <span class="chuckSpan">Chuck Norris</span></h1>

            <p class="chuckScroll" id="randomJoke"></p>

        </div>


    <!-- Socrates -->

      <div class="grid-item lifeContainer">

            <h1 class="socH1">

            <%= image_tag('thinker.png', size: "40x40", class: "thinker") %>
            <span class="factsSpan">Socrates</span></h1>

            <p class="lifeScroll"><%= @socfact.content.html_safe %></p>

      </div>


    <!--  Haiku -->

      <div class="grid-item sudokuContainer">

            <h1 class="gameH1">Haiku</h1>

            <p id="haikuP"><%= @haifact.content.html_safe %></p>

            <%= image_tag('lotus.png', size: "75x75", class: "sudo") %>

        </div>



    <!-- PBS Nova Videos -->

      <div class="grid-item educationalVidContainer">

            <h1 id="smartH1"><%= image_tag('light-bulb-icon.png', size: "30x30", class: "bulb") %>Get Smart</h1>

            <div class="smartVid">

              <iframe src="https://www.youtube.com/embed/Ng7YmU6AUo4" frameborder="0" allowfullscreen>
              </iframe>

            </div>

            <%= image_tag('brain-idea-1.png', size: "80x80", class: "brain") %>

      </div>

</div>
